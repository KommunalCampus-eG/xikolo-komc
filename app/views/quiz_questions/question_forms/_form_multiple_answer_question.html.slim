= simple_fields_for(question, namespace: question.id) do |f|
  = f.input :points, required: true, as: :integer, label: t(:'items.quiz.points')
  = f.input :shuffle_answers, label: t(:'items.quiz.shuffle_answers'), as: :toggle_switch
  = f.input :exclude_from_recap, label: t(:'items.quiz.exclude_from_recap'), as: :toggle_switch
