.small {
    font-size: 10px;
}
.logo img{
    margin-top: 10px;
}
table#statistics{
    width: 560px;
    display: flex;
    overflow-x: scroll;
}
.inner_title {
    display: none;
}
table.data_table td,  table.data_table th{
    font-size: 75%;
    padding: 2px;
}
table.data_table th{
    font-weight: bold ;
}
small {
    color: #777777;
}
p.lead small{
    line-height:120%;
}
p.lead {
    margin-bottom:0px;
}
hr {
    margin: 10px auto;
}
hr.colored {
    border-bottom: 3px solid <%= Xikolo.config.ui_primary_color %>;
    margin: -5px 0px 10px 0px;
}
h3 {
    font-size: 24px;
}
.chart img{
    width: 100%;
    height: auto;
}

th.no_bottom_padding {
    padding-bottom:0px;
}
hr.condensed {
    margin: 5px auto;
}
.meta-info p{
    font-size: 12px;
    padding-top: 10px;
}
.receiver-info{
    font-size: 12px;
}
.footer {
    font-size: 12px;
}
.right{
    float:right;
}
.label.info {
    background-color: <%= Xikolo.config.ui_primary_color %>;
    color: #070707;
}
.label.default {
    background-color: #cccccc;
    color: #ffffff;
}
.label {
    display: inline;
    width: auto;
    max-width: 200px;
    padding: .2em .6em .3em;
    font-size: 70%;
    font-weight: 700;
    line-height: 1;
    color: #fff;
    text-align: center;
    white-space: nowrap;
    vertical-align: baseline;
    border-radius: .25em;
}
table.coursestats {
    margin-top: 10px;
}
.coursestats p.lead{
    margin-top: 5px;
    line-height: 1.2;
}
